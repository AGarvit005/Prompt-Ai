{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    
    /* Module Options */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    /* Path and Output */
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}